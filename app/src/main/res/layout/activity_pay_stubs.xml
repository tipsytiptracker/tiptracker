<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/paystubs_activity"
    android:orientation="vertical"
    android:background="@color/metroTileColorPressed"
    tools:context="com.example.ronjc.tiptracker.PayStubsActivity">

    <TextView
        android:id="@+id/paystubs_tv"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        android:background="@color/metroTileColorPressed"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        android:text="@string/paystubs"/>

    <RelativeLayout
        android:id="@+id/metro_tile_1"
        android:clickable="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/metrotile"
        android:focusable="true">

        <TextView
            android:id="@+id/paystubs_picture_tile"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_camera"
            android:textColor="@drawable/tiletext"
            android:textSize="75sp"/>
        <TextView
            android:id="@+id/paystubs_picture_tile_text"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/paystubs_picture_tile"
            android:text="Take a Picture"
            android:textColor="@drawable/tiletext"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/or"
            android:textSize="18sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="2dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/paystubs_add_paystub_button"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_bg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/add_paystub"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/view_paystubs"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_bg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/view_paystub"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/uploadProgressText"
        android:text="@string/upload_progress_text"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@drawable/tiletext"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/uploadProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"
        />


</LinearLayout>
